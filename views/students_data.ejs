<html>
  <head>
    <!-- Add the C3.js CSS file -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.7.20/c3.min.css">

    <!-- Add D3.js (required by C3.js) -->
    <script src="https://d3js.org/d3.v5.min.js"></script>

    <!-- Add C3.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.7.20/c3.min.js"></script>
  </head>
  <body>
    <!-- Chart container -->
    <div id="chart"></div>

    <script>
      // Generate the chart
      var chart = c3.generate({
        bindto: '#chart', // Specify the chart container

        data: {
          columns: [
            // Chart data
            ['Data 1', 30, 200, 100, 400, 150, 250],
            ['Data 2', 50, 20, 10, 40, 15, 25],
          ],
        },
      });
    </script>
  </body>
</html>

